    <!--        android:textSize="18sp"-->
    <!--        android:layout_below="@+id/titleAssignmentEditText"-->
    <!--        android:background="@drawable/lavender_border"-->
    <!--        android:layout_marginTop="14dp"-->
    <!--        android:maxLines="1"/>-->


    <LinearLayout
        android:id="@+id/updateDueDateSelectionLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="9.3dp"
        android:layout_below="@id/updateTitleAssignmentEditText"
        android:layout_marginTop="14dp"
        android:background="@drawable/lavender_border">
        <TextView
            android:id="@+id/dueDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date"
            android:textColor="@color/light_grey"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="25dp" />
        <Button
            android:id="@+id/updatePickDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Due Date"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/updateSelectedDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="__-__-____"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>


<!--    <EditText-->
